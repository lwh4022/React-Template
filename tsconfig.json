{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": [
      "ES2015",
      "ES2016",
      "DOM"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "module": "CommonJS",
    "target": "ES3",
    "allowJs": true,
    "jsx": "react",
    "outDir": "server/public",
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "server"]
}
